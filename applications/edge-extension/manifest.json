{
  "name": "Job Application assistant",
  "version": "0.1",
  "manifest_version": 3,
  "description": "An extension to help you manage and review a job application.",
  "icons": {
      "16": "icons/java-logo-16x16.png",
      "32": "icons/java-logo-32x32.png",
      "48": "icons/java-logo-48x48.png",
      "128": "icons/java-logo-128x128.png"
  },
  "action": {
      "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content-scripts/content.js"]
    }
  ]
}
